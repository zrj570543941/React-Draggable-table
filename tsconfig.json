{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2015",
      "es2017.object",
      "es7"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "allowUnreachableCode": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ]
}
